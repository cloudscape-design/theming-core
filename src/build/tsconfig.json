{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["../../typings", "../../node_modules/@types"],
    "declaration": true,
    "composite": true,
    "outDir": "../../lib/node",
    "rootDir": "..",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "importHelpers": true,
    "tsBuildInfoFile": "../../lib/node/._tsbuildinfo"
  },
  "include": [".", "../shared", "../../typings"],
  "exclude": ["../**/__tests__/**", "../**/__fixtures__/**", "../**/__integ__/**"]
}
